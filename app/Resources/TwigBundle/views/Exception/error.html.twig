{% extends 'RestomodsListingBundle::base.html.twig' %}
{% block body %}
    <div class="error-page">
        <div class="row text-center">
            <div class="col-sm-12">
                {% if exception.statusCode == '404' %}
                    <h1>404</h1>
                    <h3>Page Not Found</h3>
                    <h4>Please make sure you have the right link.</h4>
                {% elseif exception.statusCode == '500' %}
                    <h1>500</h1>
                    <h3>Internal Server Error</h3>
                    <h4>We have noted the issue and we</h4>
                    <h4>will make sure it gets addressed soon!</h4>
                {% else %}
                    <h2>OOPS! SITE MESSED UP!</h2>
                    <h4>We have noted the issue and we</h4>
                    <h4>will make sure it gets addressed soon!</h4>
                {% endif %}
            </div>
        </div>
        <div class="row text-center action-row">
            <div class="col-sm-12">
                <a href="{{ path('restomods_listing_index') }}"><button class="btn btn-danger">GO HOME</button></a>
                <a href="/contact-us"><button class="btn btn-dark">CONTACT</button></a>
            </div>
        </div>
    </div>
{% endblock body %}